---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import SocialLinks from "./SocialLinks.astro";
const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-row justify-between items-center">
  <div class="flex items-center">
    <SocialLinks />
  </div>
  <nav role="navigation" class="flex items-center">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/posts",
          }}>Posts</a
        >
      </li>
    </ul>
  </nav>
</header>
