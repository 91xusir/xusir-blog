---
import presentation from "@/data/presentation";
---

<ul role="list" class="flex flex-row items-center gap-2">
  <li>
    <a
      href={`mailto:${presentation.mail}`}
      class="hover:text-neutral-100 inline-flex items-center"
      aria-label="Send email"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <rect width="20" height="16" x="2" y="4" rx="2"/>
        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
      </svg>
    </a>
  </li>
  <li aria-hidden="true">/</li>
  {
    presentation.socials.map((social, index) => (
      <>
        <li>
          <a 
            href={social.link} 
            target="_blank"
            rel="noopener noreferrer"
            aria-label={social.label} 
            class="inline-flex items-center hover:text-neutral-100"
          >
            <span set:html={social.svg}></span>
          </a>
        </li>
        {presentation.socials.length - 1 !== index && <li aria-hidden="true">/</li>}
      </>
    ))
  }
</ul>

